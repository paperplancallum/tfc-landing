{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "crons": [
    {
      "path": "/api/email/bulk-send?frequency=daily",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/email/bulk-send?frequency=three_weekly",
      "schedule": "0 9 * * 1,3,5"
    },
    {
      "path": "/api/email/bulk-send?frequency=twice_weekly",
      "schedule": "0 9 * * 2,4"
    },
    {
      "path": "/api/email/bulk-send?frequency=weekly",
      "schedule": "0 9 * * 1"
    },
    {
      "path": "/api/cron/win-back-campaigns",
      "schedule": "0 10 * * *"
    }
  ]
}